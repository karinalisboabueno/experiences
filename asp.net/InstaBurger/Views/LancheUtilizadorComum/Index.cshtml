@model IEnumerable<InstaBurger.Models.Lanche>
@using System.Globalization



<div><h2 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Todos os Lanches</h2></div>

<style type="text/css">
    .leftDivItem, .rightDivItem {
        border: none;
        float: left;
        width: 30%; /*Maybe the width should less than 50% to fit more browser*/
        display: inline-block;
        overflow: hidden;
        margin-bottom:50px;
    }

</style>


<div class="container">
    @{

        int i = 0;
        @foreach (var lanche in Model)
        {

            if (i % 2 == 0)
            {

                <div class="leftDivItem">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <p><img src="@lanche.ImagemUrl" class="img-fluid"></p>
                        <h3>Preço: @lanche.Preco.ToString("C" , CultureInfo.CreateSpecificCulture("pt-PT"))</h3>
                        <a asp-controller="LancheUtilizadorComum" asp-action="Details" asp-route-lancheId="@lanche.LancheId"><h4>@lanche.Nome</h4></a>
                        <p>@lanche.DescricaoCurta</p>
                    </div>
                </div>
            }
            else
            {
                <div class="rightDivItem">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <p><img src="@lanche.ImagemUrl" class="img-fluid"></p>
                        <h3>Preço: @lanche.Preco.ToString("C" , CultureInfo.CreateSpecificCulture("pt-PT"))</h3>
                        <a asp-controller="LancheUtilizadorComum" asp-action="Details"  asp-route-lancheId="@lanche.LancheId"><h4>@lanche.Nome</h4></a>
                        <p>@lanche.DescricaoCurta</p>
                    </div>
                </div>

            }

            i++;
        }

    }

</div>
