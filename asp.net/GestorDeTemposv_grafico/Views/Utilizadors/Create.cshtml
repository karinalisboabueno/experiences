@model GestorDeTempos.Models.Utilizador

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar novo Utilizador</h1>

<h4>Utilizador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UtilizadorName" class="control-label"></label>
                <input asp-for="UtilizadorName" class="form-control" />
                <span asp-validation-for="UtilizadorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">Regressar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
