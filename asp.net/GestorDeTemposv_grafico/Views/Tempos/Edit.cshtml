@model GestorDeTempos.Models.Tempo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Tempo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TempoemMin" class="control-label"></label>
                <input asp-for="TempoemMin" class="form-control" />
                <span asp-validation-for="TempoemMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TarefaId" class="control-label"></label>
                <select asp-for="TarefaId" class="form-control" asp-items="ViewBag.TarefaId"></select>
                <span asp-validation-for="TarefaId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                  @Html.ActionLink("Regressar", "Index","Tempos", new {id = Model.TarefaId}, new{@class="btn btn-secondary"})
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
