@model GestorDeTempos.Models.Tempo

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Tempo</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTempos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TempoemMin" class="control-label"></label>
                <input asp-for="TempoemMin" class="form-control" />
                <span asp-validation-for="TempoemMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TarefaId" class="control-label"></label>
             @*   <select asp-for="TarefaId" class ="form-control" asp-items="ViewBag.TarefaId"></select>*@
                <input asp-for="TarefaId" value=@ViewBag.ID readonly class ="form-control" >
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" /> |
                <a asp-controller="Tempos" asp-action="Index"  asp-route-Id="@ViewBag.ID" class="btn btn-secondary">Regressar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
